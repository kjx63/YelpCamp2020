<%- include("../partials/header") %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Add New Comment to
                <%= campground.name %>
            </h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/campgrounds/<%= campground.id%>/comments" method="POST">
                <div class="form-group">

                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <button class="btn btn-lg btn-success btn-block" style="background-color: #01b1af; border: #01b1af;">Submit</button>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>

    </div>
    <%- include("../partials/footer") %>